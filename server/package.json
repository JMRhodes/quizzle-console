{
	"name": "server",
	"version": "0.0.0",
	"license": "MIT",
	"type": "module",
	"scripts": {
		"build": "tsc",
		"start": "tsx dist/server.js",
		"dev": "tsx watch  --env-file=.env src/server.ts",
		"lint": "eslint 'src/**/*.ts'",
		"lint:fix": "eslint 'src/**/*.ts' --fix",
		"format": "prettier --write 'src/**/*.ts'",
		"format:check": "prettier --check 'src/**/*.ts'",
		"typecheck": "tsc --noEmit"
	},
	"dependencies": {
		"better-sqlite3": "^12.4.1",
		"drizzle-orm": "^0.44.7",
		"drizzle-zod": "^0.8.3",
		"express": "^5.1.0",
		"zod": "^4.1.12"
	},
	"devDependencies": {
		"@eslint/js": "^9.38.0",
		"@types/better-sqlite3": "^7.6.13",
		"@types/express": "^5.0.5",
		"@types/node": "^24.9.2",
		"drizzle-kit": "^0.31.6",
		"eslint": "^9.38.0",
		"pino-http": "^11.0.0",
		"pino-pretty": "^13.1.2",
		"prettier": "^3.6.2",
		"tsx": "^4.20.6",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.46.2"
	}
}
